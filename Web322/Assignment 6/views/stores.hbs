<div class="row">
    <div class="col-md-12">
        <h2>Stores <a href="/stores/add" class="btn btn-success pull-right">Add New Store</a> </h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Store ID</th>
                        <th>Store Name</th>
                        <th>Store Phone</th>
                        <th>Store Address</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if stores}}
                    {{#each stores}}

                    <tr>

                        <td><a href="/store/{{id}}">{{id}}</a></td>
                        <td><a href="/cars?make={{this.retailer}}">{{this.retailer}}</a></td>
                        <td><a href="tel:{{this.phone}}">{{this.phone}}</a></td>
                        <td>{{this.address}} {{this.city}}</td>
                        <td><a href="stores/delete/{{this.id}}" class="btn btn-danger">remove</a></td>
                    </tr>
                    {{/each}}

                    {{/if}}

                </tbody>
            </table>
        </div>
    </div>
    {{#unless stores}}
    <div class="col-md-12 text-center">
        <strong>no results</strong>
    </div>
    {{/unless}}
</div>