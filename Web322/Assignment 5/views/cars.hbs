<div class="row">
    <div class="col-md-12">
        <h2>Cars <a href="/cars/add" class="btn btn-success pull-right">Add New Car</a> </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Car Make</th>
                        <th>Car Model</th>
                        <th>Car Year</th>
                        <th>Car VIN</th>
                    </tr>
                </thead>
                <tbody>

                    {{#if cars}}
                    {{#each cars}}
                    <tr>

                        <td><a href="/stores?retailer={{this.make}}">{{this.make}}</a></td>
                        <td><a href="/car/{{this.vin}}">{{this.model}}</a></td>
                        <td><a href="/cars?year={{this.year}}">{{this.year}}</a></td>
                        <td><a href="/people?vin={{this.vin}}">{{this.vin}}</a></td>
                        <td><a href="cars/delete/{{this.vin}}" class="btn btn-danger">remove</a></td>

                    </tr>
                    {{/each}}
                    {{/if}}

                </tbody>
            </table>
        </div>
    </div>
    {{#unless cars}}
    <div class="col-md-12 text-center">
        <strong>no results</strong>
    </div>
    {{/unless}}
</div>